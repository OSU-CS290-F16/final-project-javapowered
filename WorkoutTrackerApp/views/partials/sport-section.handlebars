<div>
    {{#each exercises}}
    <div class="InfoSection col-md-12">
        <h2>
        	{{section}}
        	<button class="btn btn-primary pull-right" id="add-{{sectionId}}" >Add Exercise</button>
        </h2>
        <table id="table-{{sectionId}}" class="table table-striped">
            {{#if isWeightLifting}}
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Exercise</th>
                    <th>Weight</th>
                    <th>Sets</th>
                    <th>Reps</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each workouts}}
                    {{> weight-table-row this}}
                {{/each}}
            </tbody>
            {{else}}
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Distance</th>
                    <th>Time</th>
                    <th>Intensity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each workouts}}
                    {{> sport-table-row this}}
                {{/each}}
            </tbody>
            {{/if}}
        </table>
    </div>
    {{/each}}
</div>